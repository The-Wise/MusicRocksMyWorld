extends _layout
block content
 .container
  .row.main
    .panel-heading
      .panel-title.text-center
        h1.title 
           strong Sign Up
        hr
    if errors  
        for err in errors
          .alert.alert-danger.alert-dismissable
            a.close(href='#', data-dismiss='alert', aria-label='close') Ã—
            strong Warning!
            span= " " + err.msg 
    .main-login.main-center
      form.form-horizontal(method='post', action='/signup')
        .form-group
          label.cols-sm-2.control-label(for='name') First Name, Second Name
          .cols-sm-10
            input#name.form-control(type='text', name='name')
        .form-group
          label.cols-sm-2.control-label(for='email') Email
          .cols-sm-10
              input#email.form-control(type='text', name='email')  
        .form-group
          label.cols-sm-2.control-label(for='username') Username
          .cols-sm-10
            input#username.form-control(type='text', name='username')  
        .form-group
          label.cols-sm-2.control-label(for='password') Password
          .cols-sm-10
             input#password.form-control(type='password', name='password')
        .form-group
          label.cols-sm-2.control-label(for='confirm') Confirm Password
          .cols-sm-10
            input#confirm.form-control(type='password', name='confirm')
        .form-group
          label.cols-sm-2.control-label(for='confirm') URL profile picture
          .cols-sm-10
            input#confirm.form-control(type='password', name='urlProfilePicture')
        .form-group
          table(style='width:100%')
            tr
              td 
                a.btn.btn-danger.btn-lg.btn-block(href='/') Cancel
              td  
                button.btn.btn-primary.btn-lg.btn-block(type="submit") Submit