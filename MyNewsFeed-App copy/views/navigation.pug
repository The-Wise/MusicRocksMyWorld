mixin nav()
    nav.navbar.navbar-inverse(style='padding-bottom: 12px; padding-top: 12px;')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.text-menu(href='/', style='font-size: 25px;')
            strong HOME
        #bs-example-navbar-collapse-2.collapse.navbar-collapse
          ul.nav.navbar-nav()
            li
              a.text-menu(href='/news' style='font-size: 17px;')
                strong MY FEEDS
            li
              a.text-menu(href='/news' style='font-size: 17px;')
                strong NEWS
            li
              a.text-menu(href='/sport' style='font-size: 17px;')
                strong SPORT
            li
              a.text-menu(href='/tech' style='font-size: 17px;')
                strong TECH
            li
              a.text-menu(href='/design' style='font-size: 17px;')
                strong  DESIGN
          form.navbar-form.navbar-right(role='search')
            if !isAuthenticated
              .form-group
                a.btn.btn-default.btn-success.btn-round.btn-round-login(type='submit' href="/login" style='margin-left:3px;') Log In
              .form-group
                a.btn.btn-default.btn-info.btn-round(type='submit' href="/signup" style='margin-left:3px;') Sing up
            else
              .form-group
                if isAdmin()
                  a.btn.btn-default.username(style='margin-right: 10px') Add feed
                .btn-group
                    if isAdmin() 
                       a.btn.btn-default.username Admin
                    a.btn.btn-primary.username(href='#') 
                      = user.username
                    a.btn.btn-primary.dropdown-toggle.user-toggle(href='#', data-toggle='dropdown')
                      span.caret
                    ul.dropdown-menu
                      li
                        a(href='/' + user.username + '/profile') Profile
                      li.divider
                      li
                        a(href='/logout') Log out