mixin nav()
    nav
      .nav-wrapper
        //- a.brand-logo(href='/') 
          strong Home
        a.button-collapse(href='#', data-activates='mobile-demo')
          i.material-icons menu
        ul.right.hide-on-med-and-down
          li
            a(href='/') 
              strong HOME
          li
            if user
              a(href='/' + user.username + '/myfeeds') 
                strong MY FEEDS
            else
              a(href='/myfeeds') 
                strong MY FEEDS
          li
            a(href='/category/news/')
              strong NEWS
          li
            a(href='/category/sport/') 
              strong SPORT
          li
            a(href='/category/design/')
              strong DESIGN
          li
            a(href='/category/tech/')
              strong TECH

          if !isAuthenticated
              a.btn.btn-default.btn-success.btn-round.btn-round-login(href="/login") Log In
              a.btn.btn-default.btn-info.btn-round(href="/signup") Sing up
          else
              if isAdmin()
                a.btn.btn-default.username(href="/admin/edit") Add feed
              .btn-group
                  if isAdmin() 
                      a.btn.btn-default.username Admin
                  a.btn.btn-primary.username(href='/') 
                    = user.username
                  a.btn.btn-primary.dropdown-toggle.user-toggle(href='#', data-toggle='dropdown')
                    span.caret
                  ul.dropdown-menu
                    li
                      a(href='/' + user.username + '/profile') Profile
                    li.divider
                    li
                      a(href='/logout') Log out  
          
        ul#mobile-demo.side-nav
          li
            a(href='/') 
              strong HOME
          li
            if user
              a(href='/' + user.username + '/myfeeds') 
                strong MY FEEDS
            else
              a(href='/myfeeds') 
                strong MY FEEDS
          li
            a(href='/category/news')
              strong NEWS
          li
            a(href='/category/sport') 
              strong SPORT
          li
            a(href='/category/design')
              strong DESIGN
          li
            a(href='/category/tech')
              strong TECH

          if !isAuthenticated
              a.btn.btn-default.btn-success.btn-round.btn-round-login(href="/login") Log In
              a.btn.btn-default.btn-info.btn-round(href="/signup") Sing up
          else
              if isAdmin()
                a.btn.btn-default.username(href="/admin/edit") Add feed
              .btn-group
