mixin nav()
    nav
      .nav-wrapper
        //- a.brand-logo(href='/') 
          strong Home
        a.button-collapse(href='#', data-activates='mobile-demo')
          i.material-icons menu
        ul.right.hide-on-med-and-down
          li
            a(href='/') 
              strong HOME
          li
            if user
              a(href='/' + user.username + '/myfeeds') 
                strong MY FEEDS
            else
              a.not-active(href='/myfeeds') 
                strong MY FEEDS
          li
            a(href='/category/news/')
              strong NEWS
          li
            a(href='/category/sport/') 
              strong SPORT
          li
            a(href='/category/design/')
              strong DESIGN
          li
            a(href='/category/tech/')
              strong TECH

          if !isAuthenticated
              a.btn.btn-default.btn-success.btn-round.btn-round-login(href="/login") Log In
              a.btn.btn-default.btn-info.btn-round(href="/signup") Sing up
          else
              //- a.btn.btn-primary.username(href='#') 
                = user.username
              ul#user-menu.dropdown-content
                li
                  a(href='/' + user.username + '/profile') Profile
                .divider
                if isAdmin()
                  li
                    a(href="/admin/edit") Add Feed
                  .divider
                li
                  a(href='/logout') Log out
              li
                a.btn.dropdown-button.user-toggle(data-activates='user-menu')
                  | #{user.username}
                  i.material-icons.right menu
                
        ul#mobile-demo.side-nav
          li
            a(href='/') 
              strong HOME
          li
            if user
              a(href='/' + user.username + '/myfeeds') 
                strong MY FEEDS
            else
              a.not-active(href='/myfeeds') 
                strong MY FEEDS
          li
            a(href='/category/news')
              strong NEWS
          li
            a(href='/category/sport') 
              strong SPORT
          li
            a(href='/category/design')
              strong DESIGN
          li
            a(href='/category/tech')
              strong TECH

          if !isAuthenticated
              a.btn.btn-default.btn-success.btn-round.btn-round-login(href="/login") Log In
              a.btn.btn-default.btn-info.btn-round(href="/signup") Sing up
          else
              //- a.btn.btn-primary.username(href='#') 
                = user.username
              ul#user-menu-mobile.dropdown-content
                li
                  a(href='/' + user.username + '/profile') Profile
                .divider
                if isAdmin()
                  li
                    a(href="/admin/edit") Add Feed
                  .divider
                li
                  a(href='/logout') Log out
              li
                a.btn.dropdown-button.user-toggle(data-activates='user-menu-mobile')
                  | #{user.username}
                  i.material-icons.right menu
