extends ../shared/_layout

block content
    .row
        .col-lg-4
            h4 Add category
            form#admin-add-category.form-horizontal(method='post', action='/admin/edit/addcategory')
                .form-group
                label(for="category-title") Category title
                br
                input#category-title(type='text', name='category')
                br
                br
                button.btn.btn-primary.btn-sm(type='submit') Submit
            br
            br
            h4 Add feed
            form#admin-add-feed(method="post", action="/admin/edit/addfeed")
                .form-group
                label(for="feed-title") Feed Category
                br
                select#feed-category(name='category')
                    option
                    if categories 
                        each category in categories
                            option= category.name
                    else
                        option you need to add a category first
                br
                label(for="feed-category") Feed Title
                br
                input#feed-title(name="title")
                br
                label(for="feed-url") Feed URL
                br
                input#feed-url(name="url")
                br
                label(for="feed-image") Feed image URL
                br
                input#feed-image(name="image")
                br
                label(for="feed-description") Feed description
                br
                input#feed-description(name="description")
                br
                br
                button.btn.btn-primary.btn-sm(type='submit') Submit
            
        .col-lg-4
            each category in categories
                h4.admin-cat-name= category.name
                a.btn.btn-danger.btn-sm(href='/admin/edit/deletecategory/' + category._id) delete category
                br
                br
                table.table.table-hover.table-responsive
                    tr.active
                        th Feed name
                        th Feed url
                        th Feed image
                        th Feed description
                        th delete
                    each feed in category.feeds
                        tr
                            td
                                .td-inner= feed.title
                            td
                                .td-inner= feed.feedUrl
                            td
                                .td-inner= feed.imageUrl
                            td
                                .td-inner= feed.description
                            td 
                                a.btn.btn-danger.btn-sm(href='/admin/edit/deletefeed/' + category._id + '/' + feed.id) delete feed
                br