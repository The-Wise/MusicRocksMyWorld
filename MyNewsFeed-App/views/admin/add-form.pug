extends ../shared/_layout
include ../shared/message


block content
    h4 Add category
    form#admin-add-category.form-horizontal(method='post', action='/admin/edit/addcategory')
        .form-group
        label(for="category-title") Category title
        br
        input#category-title(type='text', name='category')
        br
        button.btn.btn-primary.btn-med(type='submit') Submit
    br
    br
    h4 Add feed
    form#admin-add-feed(method="post", action="/admin/edit/addfeed")
        .form-group
        label(for="feed-title") Feed Category
        br
        select#feed-category(name='category')
            option
            if categories 
                each category in categories
                    option= category.name
            else
                option you need to add a category first
        br
        label(for="feed-category") Feed Title
        br
        input#feed-title(name="title")
        br
        label(for="feed-url") Feed URL
        br
        input#feed-url(name="url")
        br
        label(for="feed-image") Feed image URL
        br
        input#feed-image(name="image")
        br
        label(for="feed-description") Feed description
        br
        input#feed-description(name="description")
        br
        button.btn.btn-primary.btn-med(type='submit') Submit

        each category in categories
            h4= category.name
            a.btn.btn-default.btn-small(href='/admin/edit/deletecategory/' + category._id) delete category
            br
            table.table-responsive
                tr
                    th ID
                    th Feed name
                    th Feed url
                    th Feed image
                    th Feed description
                    th delete
                each feed in category.feeds
                    tr
                        td= feed._id
                        td= feed.title
                        td= feed.feedUrl
                        td= feed.imageUrl
                        td= feed.description
                        td 
                            a.btn.btn-default.btn-small(href='/admin/edit/deletefeed/' + category._id + '/' + feed.id) delete feed
            br