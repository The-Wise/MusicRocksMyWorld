extends ../shared/_layout

block content
    if article
        div.article
            h2 
                =article.title
            button.btn.btn-primary.btn-med(type='button') Read later
            br
            hr
            br
            img(src=article.imageUrl)
            br
            br
            div
                if article.content
                    !=article.content
                else
                    !=article.summary
            br
            a.btn.btn-primary.btn-med(href=article.articleUrl, target='_blanc') Read original article
    else
        h2 No article