extends ../shared/_layout

block content
    .container
        if feeds.length > 0
            each feed in feeds
                - const feedurl = encodeURIComponent(feed.feedUrl)
                - const feedtitle = encodeURIComponent(feed.title)
                - const originalurl = '/category/' + name + '/' + feedtitle + '/' + feedurl
                div.feed
                    img.feed-image(src=feed.imageUrl)
                    a.feed-title(href=originalurl)
                        h4
                            =feed.title
                    p.feed-description
                        !=feed.description
                    if isAuthenticated
                        button.btn.btn-md.btn-follow(type='button', data-name=feed.title, data-url= originalurl, data-username=user.username) Follow feed
                    else
                        a.btn.btn-primary.btn-md(href='/login') Log in to Follow feed
                    br
                    hr
                    br
        else
            h3 There are no feeds to display in this category
