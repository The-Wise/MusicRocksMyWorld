extends ../shared/_layout
block content
    h3
        =feedname
    a.btn.btn-refresh(href=originalurl + '/refresh') Refresh feed
    //- if
    if isAuthenticated
        button.btn.btn-md.btn-follow(type='button', data-name=feedname, data-url= originalurl, data-username=user.username) Follow feed
    else
        a.btn.btn-primary.btn-md(href='/login') Log in to Follow feed
    
    //- else
        a.btn.btn-follow(href='user/feeds/removefeed/' + feedname) Unfollow feed
    br
    br
    hr
    if articles.length > 0
        each article in articles
            - const date = article.date.toString().slice(0,11);
            - const articleUrl = article.articleUrl
            - const articleTitle = article.title
            div.feed-article
                img.feed-article-image(src=article.imageUrl)
                a.feed-article-title(href=originalurl + '/' + article.id)
                    h5
                        =article.title
                p.feed-article-summary
                    !=article.summary
                .feed-article-content.hidden
                    !=article.description
                br
                if isAuthenticated
                    //- a.btn.btn-save-article(href='/' + user.username + '/myfeeds/addarticle/' + article.title + '/' + articleUrl) Save article
                    button.btn.btn-save-article(type='button', data-title=articleTitle, data-url= articleUrl, data-username=user.username) Save article
                else 
                    button.btn(type='button') Log in to save article
                a.btn.btn-primary.btn-med(href=originalurl + '/' + article.id) Read full article
                br
                hr
    else
        h2 There are no articles to display in this feed
