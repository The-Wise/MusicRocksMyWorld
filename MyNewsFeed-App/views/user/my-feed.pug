extends ../shared/_layout
//- include sidebar

block content
    if isAuthenticated
        .row
            #sidebar.col.s12.m4.l3
                h5 My feeds 
                br
                if feeds
                    ul
                        each feed in feeds
                            li
                                a(href=feed.feedUrl) 
                                    h6
                                        =feed.feedName
                else
                    p You are not following any feeds yet

            .col.s12.m8.l9
                ul.collection.with-header
                    li.collection-header 
                        h5 My saved articles
                    if articles
                        each article in articles
                            - const title = decodeURIComponent(article.articleTitle);
                            a.collection-item(href=article.articleUrl, target='_blanc')
                                li.collection-item.avatar
                                    img(src=article.imageUrl, alt="", class="circle")
                                    p
                                        =title
                    else
                        h4 You have no saved articles yet

    else
        h4 You have to be loged in to use this functionality