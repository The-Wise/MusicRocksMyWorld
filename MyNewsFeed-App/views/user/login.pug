extends ../shared/_layout

block content
  .container 
    .row.main
      .panel-heading
        .panel-title.text-center
          h3.title Log In
      .main-login.main-center
        form.form-horizontal(method="post", action='/login')
          .form-group
            label.cols-sm-2.control-label(for='username' ) Username
            .cols-sm-10
              input#username.form-control(type='text', name='username', placeholder='Enter your username' autofocus)
          .form-group
            label.cols-sm-2.control-label(for='password') Password
            .cols-sm-10
              input#password.form-control(type='password', name='password', placeholder='Enter your password')
          .form-group
              a.btn.btn-cancel(href='/') Cancel 
              button.btn.btn-submit(type="submit") Submit